// reset the form fields
$("#new_twitter_share").each(function(){
  this.reset();
});

// reset the character counter
$("#message").text(140);

// add the flash message
$("#js-flash").html('<%= j render partial: "layouts/flash_messages" %>');

// clear the flash message
$("#js-flash").delay(10000).fadeOut(function() {
  $(this).empty().show();
});
