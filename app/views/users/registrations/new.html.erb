<section class="devise-signup-wrapper">
  <div class="container">
    <%= render 'layouts/flash_messages' %>
    <div class="row devise-page">
      <div class="col-xs-12 col-md-6 col-md-offset-3">
        <div class="well">
          <h2>Sign up</h2>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>

            <div class="field container-fluid">
              <div class="col-xs-12 col-md-3">
                <%= f.label :email %>
              </div>
              <div class="col-xs-12 col-md-9">
                <%= f.email_field :email, autofocus: true, class: "devise-field" %>
              </div>
            </div>

            <div class="field container-fluid">
              <div class="col-xs-12 col-md-3">
                <%= f.label :first_name %>
              </div>
              <div class="col-xs-12 col-md-9">
                <%= f.text_field :first_name, autofocus: true, class: "devise-field" %>
              </div>
            </div>

            <div class="field container-fluid">
              <div class="col-xs-12 col-md-3">
                <%= f.label :last_name %>
              </div>
              <div class="col-xs-12 col-md-9">
                <%= f.text_field :last_name, autofocus: true, class: "devise-field" %>
              </div>
            </div>

            <div class="field container-fluid">
              <div class="col-xs-12 col-md-3">
                <%= f.label :password %>
              </div>
              <div class="col-xs-12 col-md-9">
                <%= f.password_field :password, autocomplete: "off", class: "devise-field" %>
                <% if @validatable %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %>
              </div>
            </div>

            <div class="field container-fluid">
              <div class="col-xs-12 col-md-3">
                <%= f.label :password_confirmation %>
              </div>
              <div class="col-xs-12 col-md-9">
                <%= f.password_field :password_confirmation, autocomplete: "off", class: "devise-field" %>
              </div>
            </div>

            <div class="actions">
              <%= f.submit "Sign up", class: "btn btn-primary active submit-devise" %>
            </div>
          <% end %>
        </div>
        <div class="well">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</section>
