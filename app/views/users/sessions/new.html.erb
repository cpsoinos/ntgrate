<section class="devise-signin-wrapper">
  <div class="container">
    <%= render 'layouts/flash_messages' %>
    <div class="row devise-page">
      <div class="col-xs-12 col-md-6 col-md-offset-3">
        <div class="well">
          <h2>Sign in</h2>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field container-fluid">
              <div class="col-xs-12 col-md-2">
                <%= f.label :email %>
              </div>
              <div class="col-xs-12 col-md-10">
                <%= f.email_field :email, autofocus: true, class: "devise-field" %>
              </div>
            </div>

            <div class="field container-fluid">
              <div class="col-xs-12 col-md-2">
                <%= f.label :password %>
              </div>
              <div class="col-xs-12 col-md-10">
                <%= f.password_field :password, autocomplete: "off", class: "devise-field" %>
              </div>
            </div>

            <% if devise_mapping.rememberable? -%>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end -%>

            <div class="actions">
              <%= f.submit "Sign in", id: "sign-in-button", class: "btn btn-primary active submit-devise" %>
            </div>
          <% end %>
        </div>
        <div class="well">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</section>
