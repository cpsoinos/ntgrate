$(".grid").masonry()

<% @feeds.each do |share| %>
  <% if share.is_a?(Hashie::Mash) %>
    var $share = "<%= escape_javascript(render 'instagram_shares/share', instagram: share) %>"
    $grid.append($share);

  <% elsif share.is_a?(Twitter::Tweet) %>
    var $share = "<%= escape_javascript(render 'twitter_shares/tweet', tweet: share) %>"
    $grid.append($share);

  <% else %>
    var $share = "<%= escape_javascript(render 'facebook_shares/share', share: share.deep_symbolize_keys) %>"
    $grid.append($share);
  <% end %>
<% end %>
